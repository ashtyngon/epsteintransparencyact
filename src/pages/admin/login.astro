---
export const prerender = false;

import { getLoginUrl, getSessionIdFromCookie, deleteSession, clearSessionCookie } from '../../lib/auth';
import { getEnv } from '../../lib/env';

const cfEnv = getEnv(Astro.locals);
const kv = cfEnv.ADMIN_SESSIONS;

// Handle logout
if (Astro.url.searchParams.get('logout') === '1') {
  const sessionId = getSessionIdFromCookie(Astro.request.headers.get('cookie'));
  if (sessionId && kv) {
    await deleteSession(kv, sessionId);
  }
  return new Response(null, {
    status: 302,
    headers: {
      Location: '/admin/login/',
      'Set-Cookie': clearSessionCookie(),
    },
  });
}

const clientId = cfEnv.GITHUB_CLIENT_ID;
const callbackUrl = `${Astro.url.origin}/admin/callback/`;
const loginUrl = getLoginUrl(clientId, callbackUrl);
