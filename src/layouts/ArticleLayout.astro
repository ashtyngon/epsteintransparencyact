---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import SourceAttribution from '../components/SourceAttribution.astro';
import RelatedPeople from '../components/RelatedPeople.astro';
import TableOfContents from '../components/TableOfContents.astro';
import { articleJsonLd } from '../utils/json-ld';
import { formatDate } from '../utils/slugify';
import type { CollectionEntry } from 'astro:content';
import type { MarkdownHeading } from 'astro';

interface Props {
  article: CollectionEntry<'articles'>;
  headings?: MarkdownHeading[];
}

const { article, headings = [] } = Astro.props;
const { title, publishedAt, updatedAt, source, sourceUrl, summary, people, relatedArticles, tags, image, keyTakeaways } = article.data;

// Load related article data for display
const { getCollection } = await import('astro:content');
const allArticles = await getCollection('articles');
const relatedArticleEntries = relatedArticles
  .map((slug: string) => allArticles.find((a) => a.id === slug))
  .filter(Boolean)
  .slice(0, 4); // Cap at 4 most relevant

const jsonLd = articleJsonLd({
  title,
  summary,
  publishedAt,
  updatedAt,
  slug: article.id,
  source,
  sourceUrl,
  image: article.data.image,
});
---

<BaseLayout
  title={title}
  description={summary}
  ogType="article"
  ogImage={`/og/news/${article.id}.png`}
  publishedTime={publishedAt}
  modifiedTime={updatedAt}
  jsonLd={jsonLd}
>
  <article>
    <!-- Article header -->
    <header class="bg-primary text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 py-6">
        <Breadcrumbs items={[
          { name: 'News', href: '/news' },
          { name: title, href: `/news/${article.id}` },
        ]} />
      </div>

      <div class="max-w-3xl mx-auto px-4 sm:px-6 pb-10">
        <!-- Source + date -->
        <div class="flex items-center gap-3 mb-4">
          <span class="source-badge bg-highlight">{source}</span>
          <time datetime={publishedAt.toISOString()} class="text-xs text-white/50 font-mono">
            {formatDate(publishedAt)}
          </time>
          {updatedAt && (
            <span class="text-xs text-white/40 font-mono">
              Updated {formatDate(updatedAt)}
            </span>
          )}
        </div>

        <!-- Headline -->
        <h1 class="text-3xl md:text-[2.75rem] font-serif font-bold leading-[1.15]">
          {title}
        </h1>
      </div>
    </header>

    <!-- Hero image (if exists) -->
    {image && (
      <div class="max-w-4xl mx-auto px-4 sm:px-6 -mt-4">
        <div class="aspect-[16/9] overflow-hidden rounded-lg bg-surface-dark">
          <img
            src={image}
            alt={title}
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
      </div>
    )}

    <!-- Article body -->
    <div class="max-w-3xl mx-auto px-4 sm:px-6 py-10">
      {keyTakeaways.length > 0 && (
        <div class="mb-10 border-l-4 border-accent bg-surface-dark px-6 py-5">
          <h2 class="text-xs font-bold uppercase tracking-widest text-accent mb-3">Key Takeaways</h2>
          <ul class="space-y-2">
            {keyTakeaways.map((takeaway) => (
              <li class="flex items-start gap-2 text-sm leading-relaxed text-text-primary">
                <span class="text-accent mt-1 flex-shrink-0">&#9654;</span>
                <span>{takeaway}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      <TableOfContents headings={headings} minHeadings={4} />

      <div class="prose-article">
        <slot />
      </div>

      <!-- Source attribution -->
      <div class="mt-10 pt-6 border-t border-border">
        <div class="flex items-center gap-2 text-sm text-text-muted">
          <span class="text-xs font-semibold uppercase tracking-wider text-text-muted">Source:</span>
          <SourceAttribution source={source} url={sourceUrl} />
        </div>
      </div>

      <!-- Tags -->
      {tags.length > 0 && (
        <div class="mt-6 pt-6 border-t border-border">
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <span class="text-[11px] font-medium text-text-muted bg-surface-dark px-3 py-1 uppercase tracking-wider">
                {tag}
              </span>
            ))}
          </div>
        </div>
      )}

      <!-- Related Coverage -->
      {relatedArticleEntries.length > 0 && (
        <div class="mt-8 pt-8 border-t-2 border-primary">
          <h3 class="text-sm font-semibold uppercase tracking-wider text-primary mb-4">Related Coverage</h3>
          <div class="space-y-3">
            {relatedArticleEntries.map((related: any) => (
              <a
                href={`/news/${related.id}`}
                class="block group no-underline p-4 border border-border hover:border-accent/30 transition-colors"
              >
                <div class="flex items-start justify-between gap-3">
                  <h4 class="font-serif text-base font-bold text-primary group-hover:text-accent transition-colors leading-snug">
                    {related.data.title}
                  </h4>
                  <span class="source-badge flex-shrink-0 text-[10px]">{related.data.source}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- People mentioned -->
      {people.length > 0 && (
        <div class="mt-8">
          <RelatedPeople slugs={people} />
        </div>
      )}
    </div>
  </article>
</BaseLayout>
