---
import SEOHead from '../components/SEOHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  ogType?: 'website' | 'article' | 'profile';
  ogImage?: string;
  publishedTime?: Date;
  modifiedTime?: Date;
  jsonLd?: Record<string, unknown> | Record<string, unknown>[];
}

const props = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-VP428HEEDS"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-VP428HEEDS');
    </script>
    <SEOHead {...props} />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="min-h-screen flex flex-col bg-surface text-text font-sans antialiased">
    <Header />
    <main class="flex-1" data-pagefind-body>
      <slot />
    </main>
    <Footer />
  </body>
</html>
