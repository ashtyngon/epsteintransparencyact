---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/articles', label: 'News' },
  { href: '/people', label: 'People' },
  { href: '/timeline', label: 'Timeline' },
  { href: '/survivors', label: 'Survivors' },
  { href: '/about', label: 'About' },
];
---

<header class="bg-primary text-white border-b border-white/10">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center gap-3 text-white no-underline">
        <span class="text-lg font-bold tracking-tight">Epstein Transparency Act</span>
      </a>

      <nav class="hidden md:flex items-center gap-1" aria-label="Main navigation">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'px-3 py-2 rounded text-sm font-medium transition-colors',
              currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                ? 'bg-white/15 text-white'
                : 'text-white/70 hover:text-white hover:bg-white/10',
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-white/70 hover:text-white"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <nav
      id="mobile-menu"
      class="hidden md:hidden pb-4 border-t border-white/10 pt-2"
      aria-label="Mobile navigation"
    >
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-3 py-2 rounded text-sm font-medium',
            currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
              ? 'bg-white/15 text-white'
              : 'text-white/70 hover:text-white',
          ]}
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    const expanded = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', String(!expanded));
    menu?.classList.toggle('hidden');
  });
</script>
