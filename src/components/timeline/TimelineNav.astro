---
import type { Era } from '../../utils/timeline-eras';

interface EraWithCount {
  era: Era;
  count: number;
}

interface Props {
  eras: EraWithCount[];
}

const { eras } = Astro.props;
---

<nav class="era-nav flex gap-2 py-4 mb-2" aria-label="Timeline eras">
  {eras.map(({ era, count }) => (
    <a
      href={`#era-${era.id}`}
      class={`flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium whitespace-nowrap border border-border hover:border-primary/30 hover:bg-surface-dark transition-colors`}
    >
      <span class={`w-2 h-2 rounded-full ${era.color} flex-shrink-0`}></span>
      <span class="text-primary">{era.shortLabel}</span>
      <span class="text-[11px] text-text-muted font-mono">({count})</span>
    </a>
  ))}
</nav>
